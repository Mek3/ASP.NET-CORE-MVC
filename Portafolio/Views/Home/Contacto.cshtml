@{
    ViewData["Title"] = "Contacto";
}



<div class="container">

    <form asp-controller="Home" asp-action="Contacto">

        <div class="mb-3">

            <label for="nombre" class="form-label"> Nombre: </label>
            <input type="text" id="nombre" name="nombre"  class="form-control" placeholder="Fulano de tal"/>

        </div>

        <div class="mb-3"> 

            <label for="email" class="form-label"> Email: </label>
            <input id="email" name="email" type="text" class="form-control"  placeholder="ejemplo@ejemplo.com"/>
        
        </div>

        <div class="mb-3">

            <label for="mensaje" class="form-label"> Mensaje: </label>
            <textarea id="mensaje" name="mensaje" type="text" class="form-control" placeholder="Escribe un mensaje...." cols="8" rows="5"> </textarea>

        </div>

        <button type="submit" class="btn btn-primary"> Enviar </button>
        
    </form>

</div>